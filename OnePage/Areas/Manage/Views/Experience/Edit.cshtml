@model Experience
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h3>Edit Experience</h3>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Title" class="form-label"></label>
            <input asp-for="@Model.Title" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Title"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Subtitle" class="form-label"></label>
            <input asp-for="@Model.Subtitle" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Subtitle"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Text" class="form-label"></label>
            <input asp-for="@Model.Text" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Text"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Text" class="form-label"></label>
            <input asp-for="@Model.Text" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Text"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Date" class="form-label"></label>
            <input asp-for="@Model.Date" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Date"></span>
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
        <a asp-controller="experience" asp-action="index"></a>
    </form>
</div>
