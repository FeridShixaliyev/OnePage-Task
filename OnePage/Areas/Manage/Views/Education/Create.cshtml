@model Education
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h3>Create Education</h3>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Title" class="form-label">Title</label>
            <input asp-for="@Model.Title" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Title"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Subtitle" class="form-label"></label>
            <input asp-for="@Model.Subtitle" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Subtitle"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Content" class="form-label"></label>
            <input asp-for="@Model.Content" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Content"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Date" class="form-label"></label>
            <input asp-for="@Model.Date" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Date"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="education" asp-action="index"></a>
    </form>
</div>
